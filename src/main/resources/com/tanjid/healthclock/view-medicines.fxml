<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tanjid.healthclock.ViewMedicinesController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f0f8ff;">

    <children>

        <!-- Back Button -->
        <Button layoutX="20" layoutY="20" text="Back to Home" onAction="#goBackToHome"
                style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 8px; -fx-background-radius: 10px;" />

        <!-- Search Field -->
        <TextField fx:id="searchField" layoutX="500" layoutY="20" prefWidth="180" promptText="Search..."
                   style="-fx-font-size: 14px; -fx-background-radius: 8px;" />

        <!-- Search Button -->
        <Button layoutX="690" layoutY="20" text="Search" onAction="#searchMedicines"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 6px; -fx-background-radius: 10px;" />

        <!-- TableView -->
        <TableView fx:id="prescriptionTable" layoutX="20" layoutY="70" prefWidth="760" prefHeight="430">
            <columns>
                <TableColumn fx:id="patientNameCol" text="Patient Name" prefWidth="120" />

                <!-- Medicine 1 -->
                <TableColumn fx:id="med1NameCol" text="Medicine 1 Name" prefWidth="120" />
                <TableColumn fx:id="med1MorningCol" text="Morning" prefWidth="80" />
                <TableColumn fx:id="med1AfternoonCol" text="Afternoon" prefWidth="80" />
                <TableColumn fx:id="med1EveningCol" text="Evening" prefWidth="80" />
                <TableColumn fx:id="med1EndDateCol" text="End Date" prefWidth="100" />

                <!-- Medicine 2 -->
                <TableColumn fx:id="med2NameCol" text="Medicine 2 Name" prefWidth="120" />
                <TableColumn fx:id="med2MorningCol" text="Morning" prefWidth="80" />
                <TableColumn fx:id="med2AfternoonCol" text="Afternoon" prefWidth="80" />
                <TableColumn fx:id="med2EveningCol" text="Evening" prefWidth="80" />
                <TableColumn fx:id="med2EndDateCol" text="End Date" prefWidth="100" />

                <!-- Medicine 3 -->
                <TableColumn fx:id="med3NameCol" text="Medicine 3 Name" prefWidth="120" />
                <TableColumn fx:id="med3MorningCol" text="Morning" prefWidth="80" />
                <TableColumn fx:id="med3AfternoonCol" text="Afternoon" prefWidth="80" />
                <TableColumn fx:id="med3EveningCol" text="Evening" prefWidth="80" />
                <TableColumn fx:id="med3EndDateCol" text="End Date" prefWidth="100" />

                <!-- Medicine 4 -->
                <TableColumn fx:id="med4NameCol" text="Medicine 4 Name" prefWidth="120" />
                <TableColumn fx:id="med4MorningCol" text="Morning" prefWidth="80" />
                <TableColumn fx:id="med4AfternoonCol" text="Afternoon" prefWidth="80" />
                <TableColumn fx:id="med4EveningCol" text="Evening" prefWidth="80" />
                <TableColumn fx:id="med4EndDateCol" text="End Date" prefWidth="100" />

                <!-- Medicine 5 -->
                <TableColumn fx:id="med5NameCol" text="Medicine 5 Name" prefWidth="120" />
                <TableColumn fx:id="med5MorningCol" text="Morning" prefWidth="80" />
                <TableColumn fx:id="med5AfternoonCol" text="Afternoon" prefWidth="80" />
                <TableColumn fx:id="med5EveningCol" text="Evening" prefWidth="80" />
                <TableColumn fx:id="med5EndDateCol" text="End Date" prefWidth="100" />
            </columns>
        </TableView>

        <!-- Edit Button -->
        <Button layoutX="20" layoutY="520" text="Edit Selected" onAction="#editSelected"
                style="-fx-background-color: #FFA500; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 8px; -fx-background-radius: 10px;" />

        <!-- Delete Button -->
        <Button layoutX="160" layoutY="520" text="Delete Selected" onAction="#deleteSelected"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 8px; -fx-background-radius: 10px;" />

    </children>
</AnchorPane>
